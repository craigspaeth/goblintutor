// 
// Global styles
// 

@import nib
global-reset()

body
  font-family Helvetica
  font-size 16px
  width 500px
  margin auto
  text-align center
  line-height 1.4em

h1
  margin 20px
  font-weight bold
  font-size 20px

input
  border 3px solid
  padding 10px
  width 100%
  font-size 16px
  outline none
  
.ac_results li
  height 260px
  margin 60px 0
  text-align left
  position relative
  clearfix()
  .img_container
    float left
    img
      max-height 100%
      max-width @max-height
  .details
    width 290px
    float left
    margin-left 20px
  h2
    font-weight bold
    margin-bottom 10px
    clearfix()
    .name
      float left
    .mana-cost
      float right
  .text
    font-size 14px
  .mid
    margin 10px 0
    clearfix()  
  .type, .expansion
    color #777
    font-size 12px
  .type
    float left
  .expansion
    float right
  .pt
    position absolute
    bottom 0
    right 0
    font-weight bold